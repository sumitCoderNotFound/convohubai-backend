# ConvoHubAI Backend Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=ConvoHubAI
APP_ENV=development
DEBUG=true
API_VERSION=v1
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/convohubai
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/convohubai

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://convohubai.com

# ===========================================
# AI SERVICES
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ===========================================
# PINECONE (Vector Database)
# ===========================================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=convohubai-kb

# ===========================================
# TWILIO (Voice & SMS)
# ===========================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# RETELL AI (Voice)
# ===========================================
RETELL_API_KEY=your-retell-api-key

# ===========================================
# STRIPE (Payments)
# ===========================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# AWS S3 (File Storage)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=convohubai-uploads

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@convohubai.com
